[MASTER]
# Use multiple processes to speed up Pylint
jobs=0

# Pickle collected data for later comparisons
persistent=yes

# List of plugins (as comma separated values of python modules names) to load
load-plugins=

# Files or directories to be skipped
ignore=migrations,.venv,venv

[FORMAT]
# Maximum number of characters on a single line
max-line-length=88

[MESSAGES CONTROL]
# Disable specific warnings that are false positives or not applicable
disable=
    # Import errors are false positives when dependencies are installed
    import-error,
    no-name-in-module,
    # SQLAlchemy false positives
    not-callable,  # func.now(), func.count() are callable at runtime
    # Model classes are data containers and don't need many public methods
    too-few-public-methods,
    # Duplicate code warnings - some duplication is acceptable for clarity
    duplicate-code,
    # These are stylistic choices that don't affect code quality
    broad-exception-caught,
    # Service classes often need a single public method
    redefined-outer-name,
    import-outside-toplevel,
    protected-access,
    fixme,

[REPORTS]
# Set the output format
output-format=colorized

# Tells whether to display a full report or only the messages
reports=yes

# Activate the evaluation score
score=yes

[BASIC]
# Good variable names which should always be accepted
# Added TypeVar names used in generic repositories
good-names=i,j,k,ex,Run,_,id,db,pk,ModelType,CreateSchemaType,UpdateSchemaType

# Regular expression matching correct function names
function-rgx=[a-z_][a-z0-9_]{2,80}$

# Regular expression matching correct method names
method-rgx=[a-z_][a-z0-9_]{2,80}$

# Regular expression matching correct constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Regular expression matching correct class attribute names
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,40}|(__.*__))$

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of positional arguments for function / method
max-positional-arguments=10

# Maximum number of attributes for a class
max-attributes=15

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=25

# Maximum number of return / yield for function / method body
max-returns=8

# Maximum number of statements in function / method body
max-statements=60

# Minimum number of public methods for a class
min-public-methods=0

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10

# Ignore comments when computing similarities
ignore-comments=yes

# Ignore docstrings when computing similarities
ignore-docstrings=yes

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=
    # SQLAlchemy
    query,
    filter,
    filter_by,
    order_by,
    group_by,
    join,
    all,
    first,
    scalar,
    one,
    one_or_none,
    # AsyncSession methods
    execute,
    commit,
    rollback,
    refresh,
    flush,
    # func methods
    func.now,
    func.count,
    func.sum,
    func.avg,
    func.max,
    func.min
